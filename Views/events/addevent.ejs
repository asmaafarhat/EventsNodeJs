    <div class="modal-dialog">
                <div class="modal-content">
                    
                    <hr />
                    <div class="modal-body">
                        <form  action="/events/add" method="post" role="form">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-user"></span>
                                    </span>
                                    <label>ID</label>&nbsp;
                                    <input type="text" name="id" class="form-control" placeholder="ID" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-lock"></span>
                                    </span>
                                    <label>Title</label>&nbsp;
                                    <input type="text" name="title" class="form-control" placeholder="title" />
                                </div>
        
                            </div>
                            

                            <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-lock"></span>
                                        </span>
                                        <label>Event Date</label>&nbsp;
                                        <input type="date" name="eventDate" class="form-control" placeholder="eventDate" />
                                    </div>
            
                                </div>
                            <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-lock"></span>
                                        </span>
                                        <label>Main Speaker</label>&nbsp;
                                        <select name="mainSpeaker" multiple> 
                                                <% speakers.forEach((speaker)=>{%>
                                                    <option value="<%=speaker._id%>"><%=speaker.fullName%></option>
                                                <%})%>
                                            </select>
                                    </div>
                                </div>

                            <div class="form-group">
                                        <div class="input-group">
                                            
                                            <label>Other Speaker</label>&nbsp;
                                            <select name="otherSpeakers"  multiple>
                                                    <% speakers.forEach((speaker)=>{%>
                                                        <option value="<%=speaker._id%>"><%=speaker.fullName%></option>
                                                    <%})%>
                                                </select>
                                        </div>
                                </div>

                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-success btn-lg" >Add</button>
                                
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        