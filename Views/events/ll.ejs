<div class="modal-dialog" >
    <div class="modal-content">
        <hr />
        <div class="modal-body">
            <form action="/events/edit/<%=event._id%>" method="post" >
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                        <span class="glyphicon glyphicon-user"></span>
                        </span>
                        <input type="text" name="id" value="<%=event._id%>"  class="form-control" placeholder="ID" disabled />
                    </div>
                </div>

                <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                            <span class="glyphicon glyphicon-lock"></span>
                            </span>
                            <input type="text" name="title" value="<%=event.title%>" class="form-control" placeholder="Title"  />
                        
                        </div>
                    
                </div>

                <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                            <span class="glyphicon glyphicon-lock"></span>
                            </span>
                            <input type="date" name="eventDate" value="<%=event.eventDate%>" class="form-control" placeholder="eventDate"  />
                        
                        </div>
                    
                </div>
                <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                            <span class="glyphicon glyphicon-lock"></span>
                            </span>
                            <label>Main Speaker</label>&nbsp;
                            <select name="mainSpeaker">
                                    <% events.forEach((event)=>{%>
                                        <option value="<%=event._id%>"><%=event.mainSpeaker.Name%></option>
                                    <%})%>
                                </select>
                        </div>
                    </div>

                    

                <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                <span class="glyphicon glyphicon-lock"></span>
                                </span>
                                <label>Other Speaker</label>&nbsp;
                                <select name="otherSpeakers" multiple>
                                        <% speakers.forEach((speaker)=>{%>
                                            <option value="<%=speaker._id%>"><%=speaker.Name%></option>
                                        <%})%>
                                    </select>
                            </div>
                    </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success btn-lg" >update</button>
                    
                </div>

            </form>
        </div>
    </div>
</div>